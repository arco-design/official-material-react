{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "arco start",
    "build": "arco build",
    "test": "arco test",
    "sync": "arco sync",
    "clean": "lerna run clean",
    "release": "lerna publish",
    "eslint": "eslint 'packages/**/src/**/*.{js,jsx,ts,tsx}' --fix --cache --quiet",
    "stylelint": "stylelint 'packages/**/src/**/*.less' --fix --cache",
    "format": "prettier 'packages/**/src/**/*.{js,jsx,ts,tsx}' --config .prettierrc --write"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.47.2",
    "@babel/runtime": "^7.22.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@arco-cli/arco": "^2.0.0-beta.1",
    "@arco-plugins/webpack-react": "^1.4.9-beta.2",
    "@testing-library/dom": "^8.19.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^29.5.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "concurrently": "^5.3.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-typescript": "^0.14.0",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "husky": "^4.3.6",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "resolutions": {
    "react-draggable": "4.4.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint",
      "git add"
    ],
    "*.{css, less}": [
      "yarn stylelint",
      "git add"
    ]
  },
  "license": "MIT"
}
